{
  "name": "recheck-cli",
  "version": "0.3.0",
  "description": "ReDos CLI Checker",
  "type": "module",
  "main": "dist/cli.js",
  "bin": "dist/cli.js",
  "scripts": {
    "dev": "tsx src/cli.ts",
    "build": "tsup",
    "prepublish": "pnpm check && pnpm build",
    "test": "node --import tsx --test src/**/*.test.ts",
    "test:watch": "node --import tsx --test --watch src/**/*.test.ts",
    "format": "biome format --write src/",
    "lint": "biome lint --write src/",
    "check": "biome check --write src/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ndom91/recheck-cli.git"
  },
  "keywords": ["redos", "regex", "checker"],
  "author": "Nico Domino <yo@ndo.dev>",
  "license": "MIT",
  "dependencies": {
    "glob": "^11.0.3",
    "meow": "^14.0.0",
    "recheck": "^4.5.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.1",
    "@types/node": "^24.9.1",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
