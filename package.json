{
  "name": "recheck-cli",
  "version": "0.3.0",
  "description": "ReDos CLI Checker",
  "type": "module",
  "main": "dist/cli.js",
  "bin": "dist/cli.js",
  "scripts": {
    "dev": "tsx src/cli.ts",
    "build": "tsup",
    "test": "node --import tsx --test src/**/*.test.ts",
    "test:watch": "node --import tsx --test --watch src/**/*.test.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ndom91/recheck-cli.git"
  },
  "keywords": [
    "redos",
    "regex",
    "checker"
  ],
  "pkg": {
    "targets": [
      "node14-linux-x64",
      "node14-win-x64",
      "node14-macos-x64"
    ],
    "outputPath": "dist"
  },
  "author": "Nico Domino <yo@ndo.dev>",
  "license": "MIT",
  "dependencies": {
    "glob": "^11.0.3",
    "meow": "^14.0.0",
    "recheck": "^4.5.0",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "pkg": "^5.8.1",
    "prettier": "^3.6.2"
  },
  "prettier": {
    "semi": false
  }
}
